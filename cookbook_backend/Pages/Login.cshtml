@page
@model cookbook_backend.Pages.Shared.LoginModel
@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: #f4f4f4;
            font-family: Arial, sans-serif;
        }

        .container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 70vh;
        }

        .login-box {
            background-color: #007bff;
            color: white;
            width: 300px;
            padding: 20px;
            border-radius: 7px;
            text-align: center; /* Yeni eklenen stil */
        }

            .login-box label,
            .login-box input {
                display: block;
                margin: 8px auto; /* Yeni eklenen stil */
            }

            .login-box input {
                width: 80%;
                padding: 8px;
                border: none;
                border-radius: 4px;
            }

            .login-box button {
                padding: 10px;
                background-color: white;
                color: #007bff;
                border: none;
                cursor: pointer;
                border-radius: 4px;
                width: 80%; 
                margin: 8px auto; 
            }

                .login-box button:hover {
                    background-color: #0056b3;
                }

        .error {
            color: red;
            margin-top: 8px;
        }

        .signup-link {
            margin-top: 16px;
            text-align: center;
            color: #007bff;
            text-decoration: none;
            display: inline-block;
        }
    

 
    </style>
</head>
<body>
    <div class="container">
        <div class="login-box">
        
               <h1>Login</h1>

                <div>
                    <form method="post">
                        <label asp-for="Input.Username"></label>
                        <input asp-for="Input.Username" />
               
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" />
                       
                        @if (!ModelState.IsValid)
                        {
                            <div class="alert alert-danger" role="alert">
                          
                                
                                    @foreach (var modelState in ViewData.ModelState.Values)
                                    {
                                        foreach (var error in modelState.Errors)
                                        {
                                            <div class="error">@error.ErrorMessage</div>
                                        }
                                    }
                              
                            </div>
                        }
                        <button type="submit">Login</button>
                    </form>
                </div>
       

          
        </div>
    </div>
    <div>  <a href="#" class="signup-link">Don't have an account? Sign up</a></div>
  
</body>
</html>
